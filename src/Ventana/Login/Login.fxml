<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" fx:id="pane" prefHeight="440.0" prefWidth="705.0"
            style="-fx-background-color: #2D2341;" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.141"
            fx:controller="Ventana.Login.Login">
    <stylesheets>
        <URL value="@Login.css"/>
    </stylesheets>
    <children>
        <StackPane fx:id="content" prefHeight="440.0" prefWidth="705.0">
            <children>
                <Pane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <JFXButton alignment="CENTER_RIGHT" focusTraversable="false" layoutX="7.0" layoutY="9.0"
                                   onAction="#cerrarClick" prefHeight="31.0" prefWidth="168.0" ripplerFill="WHITE"
                                   text="Cerrar la aplicación" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI" size="15.0"/>
                            </font>
                        </JFXButton>
                        <ImageView fitHeight="20.0" fitWidth="25.0" layoutX="13.0" layoutY="14.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@img/exiticon.png"/>
                            </image>
                        </ImageView>
                        <JFXButton focusTraversable="false" layoutX="603.0" layoutY="9.0" onAction="#registrarClick"
                                   ripplerFill="WHITE" style="-fx-background-color: #231937;" text="Registrarse"
                                   textFill="WHITE">
                            <font>
                                <Font name="Segoe UI" size="15.0"/>
                            </font>
                        </JFXButton>
                        <Label focusTraversable="false" layoutX="456.0" layoutY="14.0" text="¿No está registrado?"
                               textFill="WHITE">
                            <font>
                                <Font name="Segoe UI" size="15.0"/>
                            </font>
                        </Label>
                        <ImageView fitHeight="95.0" fitWidth="121.0" layoutX="314.0" layoutY="14.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@img/icon.png"/>
                            </image>
                        </ImageView>
                        <Label focusTraversable="false" layoutX="274.0" layoutY="105.0" text="Human" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Light" size="30.0"/>
                            </font>
                        </Label>
                        <Label focusTraversable="false" layoutX="368.0" layoutY="109.0" text="-Ware" textFill="#80e5ff">
                            <font>
                                <Font name="Segoe UI" size="30.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="usuario" focusColor="#80e5ff" layoutX="265.0" layoutY="191.0"
                                      prefHeight="31.0" prefWidth="244.0" promptText="Usuario"
                                      style="-fx-text-fill: #ffffff;" unFocusColor="WHITE">
                            <font>
                                <Font name="Segoe UI" size="15.0"/>
                            </font>
                        </JFXTextField>
                        <JFXPasswordField fx:id="contrasena" focusColor="#80e5ff" layoutX="265.0" layoutY="272.0"
                                          onAction="#contrasenaEnter" prefHeight="31.0" prefWidth="244.0"
                                          promptText="Contraseña" style="-fx-text-fill: #ffffff;" unFocusColor="WHITE">
                            <font>
                                <Font name="Segoe UI" size="15.0"/>
                            </font>
                        </JFXPasswordField>
                        <ImageView fitHeight="31.0" fitWidth="33.0" layoutX="222.0" layoutY="191.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@img/user.png"/>
                            </image>
                        </ImageView>
                        <ImageView fitHeight="31.0" fitWidth="33.0" layoutX="222.0" layoutY="272.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@img/pass.png"/>
                            </image>
                        </ImageView>
                        <JFXButton layoutX="418.0" layoutY="354.0" onAction="#iniciarSesion" ripplerFill="#80e5ff"
                                   style="-fx-background-color: #80e5ff;" text="Iniciar sesión">
                            <font>
                                <Font name="Segoe UI" size="15.0"/>
                            </font>
                        </JFXButton>
                        <JFXCheckBox fx:id="recordar" checkedColor="#80e5ff" focusTraversable="false" layoutX="225.0"
                                     layoutY="358.0" selected="true" text="Recordar usuario" textFill="WHITE"
                                     unCheckedColor="WHITE">
                            <font>
                                <Font name="Segoe UI Light" size="15.0"/>
                            </font>
                        </JFXCheckBox>
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
